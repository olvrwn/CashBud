import CashBud

final class TransactionsManagerMock: TransactionsManagerProtocol {
    // Variables for mock values
    var mockGetTransactionsResult: Result<[Transaction], Error>?
    var mockAddTransactionResult: Result<Void, Error>?
    var mockDeleteTransactionResult: Result<Void, Error>?
    
    // Mock functions
    func getTransactions(completion: @escaping (Result<[Transaction], Error>) -> Void) {
        if let result = mockGetTransactionsResult {
            completion(result)
        }
    }
    
    func addTransaction(_ transaction: Transaction, completion: @escaping (Result<Void, Error>) -> Void) {
        if let result = mockAddTransactionResult {
            completion(result)
        }
    }
    
    func deleteTransaction(withID id: String, completion: @escaping (Result<Void, Error>) -> Void) {
        if let result = mockDeleteTransactionResult {
            completion(result)
        }
    }
}
